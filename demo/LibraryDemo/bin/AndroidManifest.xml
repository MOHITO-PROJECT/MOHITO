<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.b2m.software"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.b2m.software.MainActivity"
            android:label="@string/title_activity_main" 
            android:configChanges="orientation"
    		android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.b2m.software.BookShelfActivity"
            android:label="@string/title_activity_book_shelf" 
            android:configChanges="orientation"
    		android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.b2m.software.BookDetailsActivity"
            android:label="@string/title_activity_book" 
            android:configChanges="orientation"
    		android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.b2m.software.BookReturnActivity"
            android:label="@string/title_activity_book_return" 
            android:configChanges="orientation"
    		android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.b2m.software.BookCheckOutActivity"
            android:label="@string/title_activity_book_loan_out" 
            android:configChanges="orientation"
    		android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.b2m.software.BookReadActivity"
            android:label="@string/title_activity_book_read" 
            android:configChanges="orientation"
    		android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="de.b2m.software.LibraryManagerActivity"
            android:label="@string/title_activity_library_manager" 
            android:configChanges="orientation"
    		android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
